generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Campaign {
  id String @default(uuid()) @id
  dateCreate DateTime @default(now())
  dateUpdate DateTime @updatedAt

  name String
  cycleCode String
  journalNotes String[]
  userResults Json @default("{}")

  userId String
  difficultyId Int

  user User @relation(references: [id], fields: [userId])
  difficulty CampaignDifficulty @relation(references: [id], fields: [difficultyId]) 
}

model CampaignDifficulty {
  id Int @default(autoincrement()) @id
  dateCreate DateTime @default(now())
  dateUpdate DateTime @updatedAt

  name String

  campaigns Campaign[]
}

model Path {  
  dateCreate DateTime @default(now())
  dateUpdate DateTime @updatedAt

  data Json
  userId String
  cycleCode String
  dateLastFetchArkhamCards DateTime

  user User @relation(references: [id], fields: [userId])

  @@id([userId, cycleCode])
}

model User {
  id String @default(uuid()) @id
  dateCreate DateTime @default(now())
  dateUpdate DateTime @updatedAt

  email String @unique
  password String

  paths Path[]
  campaigns Campaign[]
}